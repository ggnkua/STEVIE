int	nlines;
X{
X	register char	*s, *d, *e;
X	register int	i;
X
X	if (T_DL[0] == NUL)			/* can't do it */
X		return;
X
X	/* delete the lines */
X	outstr(T_SC);				/* save position */
X	for (i=0; i < nlines ;i++) {
X		windgoto(row, 0);
X		outstr(T_DL);			/* delete a line */
X		if (i == 0) {
